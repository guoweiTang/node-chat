doctype html
html
	head
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
		meta(name="format-detection", content="telephone=no")
		meta(name="apple-mobile-web-app-capable", content="yes")
		meta(name="apple-mobile-web-app-status-bar-style", content="black")
		meta(name="viewport", content="width=device-width, initial-scale=1.0, user-scalable=no")
		title='果味糖聊天'
		script(src="/common/static/flexible/flexible.js")
		script(src="/common/static/flexible/flexible_css.js")
		link(rel='stylesheet', href='/common/static/css/base.css')
		link(rel='stylesheet', href='/common/static/css/font.css')
		block styles
body
	if session.user
		input(id="USERID", type="hidden", value="#{session.user.id}")
		input(id="USERPIC", type="hidden", value="#{session.user.picture}")
		input(id="USERNAME", type="hidden", value="#{session.user.name}")
	header.page_header
		div.login_register
			if typeof session.user !== 'undefined'
				a(href="/account/profile.html") #{session.user.name}
				a(href="/auth/logout") 退出
			else
				a(href="/auth/login.html") 登录
				a(href="/auth/register.html") 注册

		nav
			ul.clearfix
				li
					a(href="/") 首页
				li
					a(href="/account/profile.html") 我的
				li
					a(href="/peopleList") 用户列表
	block content

	footer.page_footer
		p &copy;2020 果味糖 
			a(href="http://www.miitbeian.gov.cn/", target="_blank") 京ICP备17067717号-1

	script(src="/node_modules/jquery/dist/jquery.min.js")
	script(src="/common/components/esl/src/esl.js")
	block scripts
